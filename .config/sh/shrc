export GODOT4_BIN=/bin/godot-mono-bin
export SOURCE="$HOME/source"
export PASSWORD_STORE_GENERATED_LENGTH=30
export QMK="$SOURCE/qmk_firmware"
systemctl --user import-environment PATH HOME USER #DISPLAY defined in $dotifles/dwm/startup.sh

################
#Extras
################
[ -e ~/.cargo/env ] && . ~/.cargo/env 
#export WORKON_HOME="/home/maxwell/pyvenv" #cant nest variables this is a hack to let emacs load successfully
