ytdl () {
    dir=""
    urls=""
    pwd_flag=false
    dir_flag=false
    while [ "$#" -gt 0 ]
    do
        case "$1" in
            --dir) 
                if [ "$pwd_flag" = true ]
                then
                    echo "Error: Cannot use both --pwd and --dir options."
                    return 1
                fi
                dir_flag=true
                dir="$2"
                if [ ! -d "$dir" ]
                then
                    echo "Error: Directory '$dir' does not exist."
                    return 1
                fi
                dir=$(realpath "$dir")
                shift 2 ;;
            --pwd)
                if [ "$dir_flag" = true ]
                then
                    echo "Error: Cannot use both --pwd and --dir options."
                    return 1
                fi
                pwd_flag=true
                dir="$PWD"
                shift ;;
            *) 
                # Add URL to space-separated list
                urls="${urls:+$urls }$1"
                shift ;;
        esac
    done
    if [ -z "$urls" ]
    then
        echo "Error: No URLs supplied."
        return 1
    fi
    [ -z "$dir" ] && dir="$HOME/Downloads/ytdlp"
    
    # Process URLs
    old_IFS="$IFS"
    IFS=" "
    for url in $urls
    do
        yt-dlp --restrict-filenames --abort-on-unavailable-fragment --trim-filenames 225 -o "$dir/%(title)s.%(ext)s" "$url"
    done
    IFS="$old_IFS"
}
