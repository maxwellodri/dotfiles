################
#exports:
###############
export TERM='st'
export WEB='firefox'
export BROWSER='firefox'
export EMAILCLIENT='neomutt'
export EDITOR='vim'
export VISUAL='vim'
export BIN="$HOME/bin"
export bin="$BIN"
export PATH=$PATH:$BIN #add /home/$USER/bin to path
export PATH=$PATH:"$BIN/steam_scripts" #and subfolder for steam scripts
export PATH=$HOME/bin:$PATH:$HOME/.local/bin
export dl="$HOME/Downloads"
export CARGO_ASC=true
export GDUSER="~/.local/share/godot/app_userdata/Mykaelium/"
export GTK_THEME=Arc-Dark
