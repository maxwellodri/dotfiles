{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": ["openai", "gemini, anthropic"],
  "model": "zai-coding-plan/glm-4.6",
  "permission": {
    "edit": "allow",
    "bash": "ask",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "agent": {
      "plan": {
          "model": "zai-coding-plan/glm-4.6"
      },
      "build": {
          "model": "zai-coding-plan/glm-4.6"
      }
  },
  "formatter": {
    "rustfmt": {
        "command": ["rustfmt", "$FILE"],
        "extensions": [".rs"]
    }
  }
}
