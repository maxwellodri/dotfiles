{
    "$schema": "https://opencode.ai/config.json",
    "disabled_providers": ["openai", "gemini, anthropic"],
    "model": "zai-coding-plan/glm-4.7",
    "permission": {
        "edit": "allow",
        "bash": "ask",
        "webfetch": "ask",
        "doom_loop": "ask",
        "external_directory": "ask"
    },
    "agent": {
        "plan": {
            "model": "zai-coding-plan/glm-4.7",
            "tools": {
                "web_search_prime": true
            }
        },
        "build": {
            "model": "zai-coding-plan/glm-4.7",
            "tools": {
                "web_search_prime": true
            }
        }
    },
    "formatter": {
        "rustfmt": {
            "command": ["rustfmt", "--edition", "2024", "$FILE"],
            "extensions": [".rs"]
        }
    },
    "mcp": {
        "web-search-prime": {
            "type": "remote",
            "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
            "enabled": false,
            "headers": {
                "Authorization": "Bearer {env:ZAI_MCP_API_KEY}"
            }
        }
    }
}
